		<script type="text/javascript">
			$(".previewBox .sure").click(function(){
				var addrId = $(".hasSelect").attr("data-id");
				var addr = $(".hasSelect button").text();
				var addressInfo = {
					"id":addrId,
					"text":addr
				};
				$.cookie("addressInfo",JSON.stringify(addressInfo));
				var index = parent.layer.getFrameIndex(window.name); //获取窗口索引
				parent.layer.close(index);
//				parent.location.reload();
			});
		</script>
